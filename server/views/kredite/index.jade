extends ../layout

block meta
  meta(name='keywords', content='Kredite, Schulden, Schulden abbauen, Schuldenabbau, Finanzierungen')
  meta(name='description', content='Was Sie zum Thema Baufinanzierung wissen müssen.')
  //- todo: adjust metatags

block content
  div#wrapper.clearfix
    include ../_includes/navheader
    mixin navheader(false)
    //- Page-title
    section#page-title
      include ../_mixins/page_title
      mixin page_title('Kredite & Schuldenabbau', 'FinIQ-Guides und Tools zu den Themen Kredit und Schuldenabbau', ['Home', '/'], ['Kredit', '/kredit', 'true'])

    section#content
      div.content-wrap.content-wrap-topics
        div.container.clearfix

          //- main content
          div.postcontent.nobottommargin.clearfix
            //- calculators
            div.col_half

              div.fancy-title.title-bottom-border.xsbottommargin
                h3.nobottompadding Aus unserem Blog

              div#posts.small-thumbs
                include ../_mixins/blog_preview_item

                mixin blog_preview_item('Gute Schulden und schlechte Schulden', '18.11.2015', 'Selten kommen gute Gefühle auf, wenn das Wort Schulden fällt. Dabei sind Schulden in Deutschland sehr weit verbreitet und wenn Sie Schulden haben sollten, dann sind Sie alles andere als alleine. Laut Daten von Creditreform gab es Anfang 2015 6,72 Mio. überschuldete Deutsche, welche laut statistischem Bundesamt im Durchschnitt etwa 34.000 € Schulden hatten.', '/kredite/gute-schulden-und-schlechte-schulden', 'assets/img/kredit/blog_guteSchuldenSchlechteSchulden_01.jpg', 'Welche Schulden sind schlechte Schulden und welche eher nicht? Dieser Artikel soll Ihnen helfen, bei Thema Schulden die Spreu vom Weizen zu trennen')





              //div.fancy-title.title-bottom-border.xsbottommargin
                h3.nobottompadding Rechentools
              //div#posts
                include ../_mixins/calc_preview_item

                mixin calc_preview_item('Bausparrechner', 'Mit dem Bausparrechner können Sie Bausparverträge berechnen, Effektivzinsen analysieren und Spar- sowie Tilgungspläne erstellen.', '/baufinanzierung/bausparrechner', 'assets/img/baufinanzierung/bausparrechner_01.jpg', 'Bausparrechner')

                //-mixin calc_preview_item('Wie verteile ich mein Geld am besten?', 'Ob Aktien, Fonds, Festgeld, Tagesgeld oder das gute alte Sparbuch, die Möglichkeiten bei der Geldanlage sind unbegrenzt. Jedoch unterscheiden sich die Produkte aus Risiko- und Renditesicht mitunter deutlich. Für eine gute Geldanlage ist die richtige Mischung - von Experten auch Assetallokation genannt - entscheidend. Wir helfen Ihnen, eine gute Mischung für Ihre Geldanlage zu finden.', '/geldanlage/assetallokation', 'assets/img/geld_anlegen/assetallocation_01.jpg', 'Wie verteile ich mein Geld am besten?')

            //- from blog
            div.col_half.col_last
              //div.fancy-title.title-bottom-border.xsbottommargin
                h3.nobottompadding Vergleichstools
              //div#posts
                include ../_mixins/compare_preview_item

                mixin compare_preview_item('Vergleichen Sie verschiedene Baufinanzierungen', 'Lorem ipsum dolor sit amet, consectetur adipisicing elit. Cupiditate, asperiores quod est tenetur in. Eligendi, deserunt, blanditiis est quisquam doloribus voluptate id aperiam ea ipsum magni aut perspiciatis rem voluptatibus officia eos rerum deleniti quae nihil facilis repellat atque vitae voluptatem libero at eveniet veritatis ab facere.', '/')


              div.fancy-title.title-bottom-border.xsbottommargin
                h3.nobottompadding Artikel
              div
                include ../_mixins/article_preview_item

                mixin article_preview_item('Wie werde ich schuldenfrei?', 'Lorem Ipsum', '/kredite/wie-werde-ich-schuldenfrei')









          //- sidebar
          include ../_mixins/sidebar
          mixin sidebar({social: true, socialcontent: {link: 'http://www.finiq.de/kredite', title: 'Kredite & Schuldenabbau', description: 'FinIQ-Guides und Tools zu den Themen Kredit und Schuldenabbau.'}, more: true, morecontent: [['/hauskauf/wie-hoch-darf-der-hauspreis-sein', 'Wie hoch darf der Hauspreis sein?'], ['/geldanlage/assetallokation', 'Wie verteile ich mein Geld am besten?'], ['/geldanlage/sparrechner', 'Wie entwickeln sich meine Ersparnisse über die Zeit?'], ['/geldanlage/wie-lege-ich-geld-an', 'Wie lege ich Geld an?']]})



    include ../_includes/footer
