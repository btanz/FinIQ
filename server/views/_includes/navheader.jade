mixin navheader(landing_page)

  //header#header.full-header.static-sticky.transparent-header
  if landing_page
    header#header.transparent-header.dark.full-header(data-sticky-class='not-dark')
      mixin navheader_content
  else
    header#header.full-header.static-sticky.transparent-header
      mixin navheader_content

mixin navheader_content
  div#header-wrap
    div.container.clearfix
      //- MENU TRIGGER
      div#primary-menu-trigger
        i.icon-reorder

      //- LOGO
      div#logo
        a(href='/', class='standard-logo', data-dark-logo='/assets/img/logo/logo-dark.png')
          img(src='/assets/img/logo/logo.png', alt='Canvas Logo')
        a(href='/', class='retina-logo', data-dark-logo='/assets/img/logo/logo-dark@2x.png')
          img(src='/assets/img/logo/logo.png', alt='Canvas Logo')

      //- PRIMARY NAV
      nav#primary-menu
        ul.sf-js-enabled(style='touch-action: pan-y')
          li
            a(href='/bausparen')
              div Bausparen
          li
            a(href='/hauskauf')
              div Hauskauf
          li
            a(href='/geldanlage')
              div Geld anlegen
          li
            a(href='/kreditkarten')
              div Kreditkarten
          li
            a(href='/blog')
              div Blog
